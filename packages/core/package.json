{
	"name": "@git-stats-components/core",
	"version": "1.0.4",
	"description": "Core logic for git-stats-components - framework-agnostic",
	"author": "Derek Johnston",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		},
		"./*": {
			"types": "./dist/*/index.d.ts",
			"import": "./dist/*/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc && node scripts/post-build.js",
		"dev": "tsc --watch",
		"test": "vitest run",
		"type-check": "tsc --noEmit",
		"test:watch": "vitest"
	},
	"keywords": [
		"git",
		"stats",
		"contributions",
		"github",
		"gitlab",
		"bitbucket",
		"core"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/derekjj/git-stats-components.git",
		"directory": "packages/core"
	},
	"bugs": {
		"url": "https://github.com/derekjj/git-stats-components/issues"
	},
	"homepage": "https://github.com/derekjj/git-stats-components#readme",
	"devDependencies": {
		"@types/node": "^20.10.6",
		"typescript": "^5.3.3",
		"vitest": "^1.1.0"
	}
}
